<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_workmates_layout_margin"
    android:orientation="horizontal">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/workmates_image"
        android:layout_width="@dimen/nav_header_wh"
        android:layout_height="@dimen/nav_header_wh"
        android:layout_marginStart="@dimen/workmates_image_margin_start"
        app:civ_border_color="#000"
        app:civ_border_width="@dimen/workmates_image_border_width"
        app:civ_shadow="true"
        app:civ_shadow_color="#000"
        app:civ_shadow_radius="0"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/doing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_wh"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/doing_margin_start"
        android:textSize="@dimen/doing_margin_text_size"
        android:textStyle="bold"
        android:text="@string/laurent_is_eating_french_le_zinc"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000" />

</android.support.constraint.ConstraintLayout>