<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/default_large_margin">

    <ImageView
        android:id="@+id/image_receiver"
        android:layout_width="@dimen/list_restaurant_height"
        android:layout_height="@dimen/list_restaurant_height"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/marginupanddown"
        android:src="@drawable/ic_add_circle_black_24px"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_restaurant_height"
        android:layout_marginStart="@dimen/marginupanddown"
        android:layout_marginEnd="0dp"
        android:background="@color/colorSand"
        android:textColor="@color/colorPrimaryDark3"
        android:text="@string/write_your_message_here"
        android:textSize="@dimen/default_text_size" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_receiver"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:text="@string/hour"
        android:textColor="@color/colorPrimaryDark3"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
</RelativeLayout>